datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  createdAt DateTime @default(now())

  projects Project[]
}


model Project {
  id String @id @default(uuid())
  name String
  apiKey String @unique
  createdAt DateTime @default(now())

  logs Log[]
  alerts Alert[]

  userId String
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}


model Log {
  id String @id @default(uuid())
  level String
  message String
  timestamp DateTime
  metadata Json?

  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, timestamp])
}


model Alert {
  id String @id @default(uuid())
  triggeredAt DateTime @default(now())
  logMessage String
  triggeringLog Json

  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}